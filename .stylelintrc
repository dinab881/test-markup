{
  "extends": "stylelint-config-standard",
  "rules": {
    "function-whitespace-after": null,
    "selector-pseudo-class-no-unknown": null,
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "define-extend",
        "extend",
        "define-mixin",
        "mixin",
        "svg-load"
      ]
    }]
  }
}
